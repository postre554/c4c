<div class="container">

  <p style="color: green"><%= notice %></p>

  <h1>Comments</h1>

  <div id="comments">
    <% @comments.each do |comment| %>
      <%= render comment %>
      <p>
        <%= link_to "Detalle de comentario", comment , class:"btn btn-primary"  %>
      </p>
    <% end %>
  </div>

  <%= link_to "New comment", new_publication_comment_path(@publication), class:"btn btn-primary" %>


</div>