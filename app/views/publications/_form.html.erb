<%= form_with(model: publication) do |form| %>
  <% if publication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :contenido, style: "display: block" %>
    <%= form.text_area :contenido %>
  </div>

  <div>
    <%= form.label :fecha_publicacion, style: "display: block" %>
    <%= form.datetime_field :fecha_publicacion %>
  </div>

  <div>
    <%= form.label :ubicacion, style: "display: block" %>
    <%= form.text_field :ubicacion %>
  </div>

  <% if user_signed_in? %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  <% else %>
    <%= form.hidden_field :user_id, value: nil %>
  <% end %>


  <div>
    <%= form.submit %>
  </div>
<% end %>
