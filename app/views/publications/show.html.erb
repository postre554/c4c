<p style="color: green"><%= notice %></p>

<%= render @publication %>

<div>
  <%= link_to "Edit this publication", edit_publication_path(@publication) %> |
  <%= link_to "Back to publications", publications_path %>

  <%= button_to "Destroy this publication", @publication, method: :delete %>
</div>

<div>
<%= link_to "Ver comentarios", publication_comments_path(@publication) %>
</div>



<!--mostrar lista de comentarios asociados a mi publicacion-->

<div>
  <h2>Comentarios</h2>
  <% @publication.comments.each do |comment| %>
    <p><strong><%= comment.user_id %>:</strong> <%= comment.texto %></p>
  <% end %>
</div>